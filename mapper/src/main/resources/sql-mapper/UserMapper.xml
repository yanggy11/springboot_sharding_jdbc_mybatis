<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanggy.springboot.mapper.UserMapper">
    <resultMap id="userMap" type="com.yanggy.springboot.entity.User">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
    </resultMap>


    <insert id="insertUser">
        INSERT INTO user(name,user_id, age) VALUES(#{name},#{userId}, #{age})
    </insert>

    <select id="getUserList" parameterType="com.yanggy.springboot.dto.UserParam" resultMap="userMap">
        select id,user_id, name,age from user
        <where>
            <if test="name != null and name != ''">
                name = #{name}
            </if>
        </where>
        order by add_time desc
        <if test="offset > -1 and pageSize > 0">
            limit #{offset}, #{pageSize}
        </if>
    </select>
</mapper>